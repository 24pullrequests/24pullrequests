<%= simple_form_for @event, wrapper: :bootstrap3_horizontal, defaults: {right_column_html: {class: "col-lg-3 col-md-3"}, label_html: {class: "col-lg-2 col-md-2"} }, :html => {:class => 'form-horizontal', :role => "form"} do |form| %>
  <%= form.input :name, label: t("events.new.form.name"), placeholder: t("events.new.form.name_placeholder") %>
  <%= form.input :description, label: t("events.new.form.description"), placeholder: t("events.new.form.description_placeholder") %>
  <%= form.input :location, label: t("events.new.form.location"), placeholder: t("events.new.form.location_placeholder") %>
  <%= form.input :url, label: t("events.new.form.url"), placeholder: t("events.new.form.url_placeholder") %>
  <%= form.input :start_time, label: t("events.new.form.start_time"), as: :string, input_html: { class: "js-datetimepicker" } %>
  <div class="form-group">
    <label class="col-sm-2 control-label">
      <%= t("events.new.form.map") %>
    </label>
    <div class="col-sm-10 col-md-6">
      <div class="map map--small" data-map-picker="true"></div>
      <div class="js-pins">
        <span class="pin"></span>
      </div>
      <%= form.hidden_field :latitude, class: "form-control", step: "any" %>
      <%= form.hidden_field :longitude, class: "form-control", step: "any" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10 col-md-4">
      <%= form.submit t("events.save_event"), class: "btn btn-default" %>
    </div>
  </div>
<% end %>
