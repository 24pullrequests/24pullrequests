<h1><%= t("events.title") %></h1>
<h3><%= t("events.description") %></h3>

<div class="map"></div>

<div class="js-pins">
  <% @events.each do |event| %>
    <%= link_to "", event, class: "pin", data: { latitude: event.latitude, longitude: event.longitude } %>
  <% end %>
</div>

<% if @events.empty? %>
  <h4><i>There are no upcoming events, why not <%= link_to "host an event", new_event_path %></i></h4>
<% end %>

<% @events.each do |event| %>
  <div class="event">
    <h2><%= link_to event.organiser, event %>
      <% if event.current_user_is_owner(current_user) %>
        <small><%= link_to "edit", edit_event_path(event) %></small>
      <% end %>
    </h2>
    <h3><small><%= event.location %> / <%= event.formatted_date %></small></h3>
  </div>
<% end %>
