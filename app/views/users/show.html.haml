.row.clearfix
  .span4
    = image_tag(gravatar_url(user.gravatar_id, 400), :width => 400, :alt =>user.nickname)
  .span8
    %h2 Viewing #{user.nickname}'s public profile
    = link_to 'Github Profile', "https://github.com/#{user.nickname}", :target => :blank
    
    %h3 Recent Pull Requests

    %ul
      = render :partial => 'pull_requests/pull_request', :collection => pull_requests