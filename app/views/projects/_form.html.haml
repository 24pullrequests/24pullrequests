= simple_form_for @project, wrapper: :bootstrap3_horizontal, defaults: {right_column_html: {class: "col-lg-3 col-md-3"}, label_html: {class: "col-lg-2 col-md-2"} }, :html => {:class => 'form-horizontal', :role => "form"} do |form|
  = form.input :name, :label => t("projects.new.form.project_name")
  = form.input :github_url, disabled: @project.persisted?, :label => t("projects.new.form.github_url")
  = form.input :description, :input_html => {:rows => 5}, :label => t("projects.new.form.summary")
  = form.input :main_language, :input_html => {:data => {:provide => "typeahead", :source => Project::LANGUAGES}, :autocomplete => 'off', :placeholder => "Ruby, C++, Java, Python...", :label => t("projects.new.form.main_language")}
  = form.association :labels, collection: Label.all, as: :check_boxes
  .form-group
    .col-md-offset-2.col-sm-10
      = form.button :submit, t("projects.new.form.submit_project")
      =t("or")
      = link_to t("cancel"), projects_path
