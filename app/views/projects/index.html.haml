%h2
  Suggested Projects
  = link_to 'Suggest a project', new_project_path, :class => 'btn pull-right'

%ul#languages.row
  %li
    = link_to 'Everything', '#'
  - Project::LANGUAGES.each do |language|
    %li
      = link_to language, '#', :data => {:language => parameterize_language(language)}

#projects
  - @projects.each_slice(2) do |projects|
    .row-fluid.clearfix
      = render projects

