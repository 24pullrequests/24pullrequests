= simple_form_for gift_form.gift, :html => {:class => 'form-horizontal'}  do |form|

  - if gift_form.giftable_dates.any?
    = form.input :date, :collection => gift_form.giftable_dates

  = form.input :pull_request_id, :collection => gift_form.pull_requests_for_select

  .control-group
    .controls
      = form.button :submit, 'Gift it!'
