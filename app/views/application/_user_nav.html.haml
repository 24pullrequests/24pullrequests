- if logged_in?
  %nav
    %ul.nav.nav-pills
      %li.logout
        = link_to logout_path, :title => t("navigation.logout") do
          %span.octicon.octicon-sign-out

      %li
        = link_to dashboard_path do
          %span.octicon.octicon-dashboard
          = t("navigation.dashboard")
      %li
        = link_to user_path(current_user) do
          %span.octicon.octicon-person
          = t("navigation.profile")
      %li
        = link_to gifts_path do
          %span.octicon.octicon-gift
          = t("navigation.gifted_code")
      %li
        = link_to my_suggestions_path do
          %span.octicon.octicon-repo
          = t("navigation.my_suggestions")
      - if admin?
        %li
          = link_to admin_projects_path do
            %span.octicon.octicon-tools
            = t("navigation.manage_projects")
