- if logged_in?
  %nav
    %ul.nav.nav-pills
      %li.logout
        = link_to logout_path, :title => t("navigation.logout") do
          %span.octicon.octicon-sign-out

      %li
        = link_to dashboard_path do
          %span.octicon.octicon-dashboard
          = t("navigation.dashboard")
      %li
        = link_to user_path(current_user) do
          %span.octicon.octicon-person
          = t("navigation.profile")
      %li
        = link_to t("navigation.gifted_code"), gifts_path
      %li
        = link_to t("navigation.my_suggestions"), my_suggestions_path
      - if admin?
        %li
          = link_to t("navigation.manage_projects"), admin_projects_path
