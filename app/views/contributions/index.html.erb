<h2>
  <% if @language %>
    <%= t("pull_requests.language.count", count: number_with_delimiter(contribution_count), language: @language) %>
  <% else %>
    <%= t("pull_requests.count", count: number_with_delimiter(contribution_count)) %>
  <% end %>
</h2>
<%= render @contributions, cache: true %>
<%= paginate @contributions %>
